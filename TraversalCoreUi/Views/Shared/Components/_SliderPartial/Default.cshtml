@model List<Destination>
<section class="w3l-main-slider" id="home">
  <div class="banner-content">
    <div id="demo-1"
      data-zs-src='["/Travel/assets/images/banner1.jpg", "/Travel/assets/images/banner2.jpg","/Travel/assets/images/banner3.jpg", "/Travel/assets/images/banner4.jpg"]'
      data-zs-overlay="dots">
      <div class="demo-inner-content">
        <div class="container">
          <div class="banner-infhny">
            <h3>Seyahatler için uzağa gitmeye gerek yok</h3>
            <h6 class="mb-3">Bir sonraki maceranı hemen planla</h6>
            <div class="flex-wrap search-wthree-field mt-md-5 mt-4">
              <form action="#" method="post" class="booking-form">
                <div class="row book-form">
                  <div class="form-input col-md-4 mt-md-0 mt-3">

                    <select name="selectpicker" class="selectpicker">
                      <option value="" disabled selected>Rotalar</option>
                      @foreach (var item in Model)
                      {
                        <option value="">@item.City</option>

                      }

                    </select>

                  </div>
                  <div class="form-input col-md-4 mt-md-0 mt-3">

                    <input id="inputDate" type="date" name="" placeholder="Date" required="" value="">
                  </div>
                  <div class="bottom-btn col-md-4 mt-md-0 mt-3">
                    <button class="btn btn-style btn-secondary"><span class="fa fa-search mr-3"
                        aria-hidden="true"></span>Ara</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  var inputDates = document.querySelector("#inputDate").value;
  let today = new Date();
  let yyyy = today.getFullYear();
  let mm = today.getMonth() + 1; // Months start at 0!
  let dd = today.getDate();

  if (dd < 10) dd = '0' + dd;
  if (mm < 10) mm = '0' + mm;

  today = yyyy + '-' + mm + '-' + dd;
  inputDates = today

  document.querySelector("#inputDate").value = inputDates

</script>